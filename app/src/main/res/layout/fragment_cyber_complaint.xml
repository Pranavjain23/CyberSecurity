<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CyberComplaintFragment"
    android:background="@drawable/homebackground">

   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

       <androidx.cardview.widget.CardView
           android:id="@+id/cardMain"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register a cyber complaint"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_marginTop="3dp"
                    android:padding="10dp"
                    android:text="This portal is an initiative of Government of India to facilitate victims/complainants to report cyber crime complaints online. This portal caters to complaints pertaining to cyber crimes only with special focus on cyber crimes against women and children. Complaints reported on this portal are dealt by law enforcement agencies/ police based on the information available in the complaints. It is imperative to provide correct and accurate details while filing complaint for prompt action."
                    android:textSize="15sp" />
            </RelativeLayout>
       </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardMain"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Prior to filing a complaint with this portal, we would request you to read the below information regarding terms and conditions. Should you have queries prior to filing your complaint, view Frequently Asked Questions below: "
        android:textSize="10sp" />

    <TextView
        android:id="@+id/procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procedure"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_below="@id/text4"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/imgCyberComplaint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/procedure"
        app:cardCornerRadius="4dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="150dp"
        android:src="@drawable/cybercomplaintstep1"/>
    </androidx.cardview.widget.CardView>


       <TextView
        android:id="@+id/txtCyberComplaint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:textColor="@android:color/white"
        android:text="Filing a Complaint on National Cyber Crime Reporting Portal ! Click on File a Complaint to proceed to the next step"
        android:layout_below="@id/imgCyberComplaint1"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        />

       <androidx.cardview.widget.CardView
           android:id="@+id/imgCyberComplaint2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           app:cardCornerRadius="4dp"
           android:layout_below="@+id/txtCyberComplaint1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cybercomplaintstep2"/>
       </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtCyberComplaint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prior to filing a complaint with this portal , you should agree to the Terms and Conditions . Should you have queries prior to filing your complaint, view Frequently Asked Questions FAQ."
        android:layout_below="@id/imgCyberComplaint2"
        android:layout_marginRight="15dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        />

       <androidx.cardview.widget.CardView
           android:id="@+id/imgCyberComplaint3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           app:cardCornerRadius="4dp"
           android:layout_below="@+id/txtCyberComplaint2">
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cybercomplaintstep3"/>
       </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtCyberComplaint3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next step is to choose between Report Cyber Crime Related to Women/Child and Report Other Cyber Crime . Choose appropriately "
        android:layout_below="@id/imgCyberComplaint3"
        android:textColor="@android:color/white"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        />

       <androidx.cardview.widget.CardView
           android:id="@+id/imgCyberComplaint4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           app:cardCornerRadius="4dp"
           android:layout_below="@+id/txtCyberComplaint3">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cybercomplaintstep4"/>
       </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtCyberComplaint4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report anonymously . Fill in the Complaint/Incident Details and proceed to next steps and do fill all the information correct and carefully"
        android:layout_below="@id/imgCyberComplaint4"
        android:textColor="@android:color/white"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        />

       <androidx.cardview.widget.CardView
           android:id="@+id/imgCyberComplaint5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           app:cardCornerRadius="4dp"
           android:layout_below="@+id/txtCyberComplaint4">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cybercomplaintstep5"/>
       </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtCyberComplaint5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Citizen Login with the Complaint Name and the required field to track the status of your Complaint"
        android:layout_below="@id/imgCyberComplaint5"
        android:textColor="@android:color/white"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id="@+id/linkFAQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCyberComplaint5"
        android:text="@string/linkFAQ"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</ScrollView>