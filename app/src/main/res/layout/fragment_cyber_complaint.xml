<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CyberComplaintFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="15dp"
            android:padding="20dp">

            <RelativeLayout
                android:background="@color/lightBlue"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complaint1"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blue"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:text="@string/complaint2"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/linkFAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linkFAQ"
            android:textColorLink="@color/blue"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cardMain"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linkFAQ"
            android:padding="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/darker_gray"
            android:background="@color/blue"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/complaint3"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/divider"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/text4"
            android:background="@color/black">

        </TextView>
        <TextView
            android:id="@+id/procedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complaint4"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/divider"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCyberComplaint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/procedure"
            app:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="150dp"
                android:src="@drawable/cybercomplaintstep1"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txtCyberComplaint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="@string/complaint5"
            android:layout_below="@id/imgCyberComplaint1"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCyberComplaint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            android:layout_below="@+id/txtCyberComplaint1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cybercomplaintstep2"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCyberComplaint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complaint6"
            android:layout_below="@id/imgCyberComplaint2"
            android:layout_marginRight="15dp"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCyberComplaint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            android:layout_below="@+id/txtCyberComplaint2">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cybercomplaintstep3"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCyberComplaint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complaint7"
            android:layout_below="@id/imgCyberComplaint3"
            android:textColor="@color/blue"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCyberComplaint4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            android:layout_below="@+id/txtCyberComplaint3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cybercomplaintstep4"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCyberComplaint4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complaint8"
            android:layout_below="@id/imgCyberComplaint4"
            android:textColor="@color/blue"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCyberComplaint5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            android:layout_below="@+id/txtCyberComplaint4">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cybercomplaintstep5"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCyberComplaint5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complaint9"
            android:layout_below="@id/imgCyberComplaint5"
            android:textColor="@color/blue"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            />
    </RelativeLayout>
</ScrollView>