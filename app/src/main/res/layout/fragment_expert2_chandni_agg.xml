<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Expert2ChandniAggFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            app:cardCornerRadius="10dp"
            android:orientation="vertical"
            android:id="@+id/card1Expert">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/lightBlue"
                android:weightSum="9"
                android:id="@+id/llContent1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="140dp"
                    android:src="@drawable/chandniagg"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>

                <RelativeLayout
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <TextView
                        android:id="@+id/txtExpertName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chandni_agarwal"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/txtExpertDesignation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_below="@id/txtExpertName1"
                        android:padding="5dp"
                        android:text="@string/idea_founder_desig"
                        android:textSize="15sp"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1Expert"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue"
                >
                <TextView
                    android:id="@+id/expertDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/blue"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="Chandni Agarwal is a dynamic &amp; visionary educationist with over 20 years experience of teaching Computer Science. \nShe is a National ICT Awardee , Cyber Security Awareness Coach , MIEE , MIEFellow, Adobe Creative Educator , Wakelet Educator Leader &amp; ambassador.  She had also represented India at USA as Student Mentor and Paris as Educator and brought laurels for the country. She has also been a resource person for NCERT , SCERT &amp;NIOS.\nThis ICT ambassador through her undiluted devotion , determination and focus has become the
torch bearer of her initiative CSAO â€“ Cyber Security Awareness via Cyber Security Guide
Android App.\nShe is creating an ICT literate community of learners which can deploy, utilize and contribute to
a constantly evolving digital nation."/>

                <TextView
                    android:id="@+id/expertName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expertDescription"
                    android:text="@string/chandni_agarwal"
                    android:textColor="@android:color/black"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/expertTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    android:paddingBottom="5dp"
                    android:layout_below="@id/expertName"
                    android:textStyle="bold"
                    android:text="@string/chandniag_desig"/>


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="7dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="7dp"
                    android:layout_below="@id/expertTitle1"
                    android:textSize="17sp"
                    android:text="studywithchandni@gmail.com"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</ScrollView>