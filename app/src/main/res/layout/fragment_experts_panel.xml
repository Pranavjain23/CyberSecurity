<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ExpertsPanelFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            app:cardCornerRadius="10dp"
            android:clickable="true"
            android:orientation="vertical"
            android:id="@+id/card2"
            android:layout_below="@id/card1"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="9"
                android:background="@color/lightBlue"
                android:id="@+id/llContent1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/expert1nishadua"
                    android:layout_weight="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>

                <RelativeLayout
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <TextView
                        android:id="@+id/txtExpertName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nisha Dua"
                        android:paddingStart="8dp"
                        android:textSize="20sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/txtExpertDesignation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtExpertName1"
                        android:paddingStart="8dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Principal Consultant Cyber Peace Foundation"
                        android:textSize="15sp"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            app:cardCornerRadius="20dp"
            android:orientation="vertical"
            android:id="@+id/card1">

            <LinearLayout
                android:background="@color/lightBlue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="9"
                android:id="@+id/llContent2">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chandniagg"
                    android:layout_weight="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>

                <RelativeLayout
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <TextView
                        android:id="@+id/txtExpertName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chandni_agarwal"
                        android:paddingStart="8dp"
                        android:textSize="20sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/txtExpertDesignation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtExpertName2"
                        android:paddingStart="8dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/chandniag_desig"
                        android:textSize="15sp"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>
</ScrollView>