<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.VideosAndWebinarFragment"
    android:background="@drawable/homebackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPlaylist"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/playlistimpres"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/clickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/cardPlaylist"/>

    <TextView
        android:id="@+id/txtCardPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clickHere"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Learn more about Cyber Security from our very own experts. Click above to directly go to our specialized palylist for you."/>


</RelativeLayout>